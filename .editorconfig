root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true


# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,jsx,html}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Indent sass files with 4 spaces
[*.{sass}]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

